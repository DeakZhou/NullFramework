<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Start" parent="AppTheme">
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
    </style>

    <style name="LoadingDialog_UnifyStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!--  -->
    <style name="Linearlayout_UnifyStyle" parent="View_UnifyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Box_Linearlayout_UnifyStyle" parent="View_UnifyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/view_padding</item>
        <item name="android:paddingRight">@dimen/view_padding</item>
        <item name="android:paddingTop">@dimen/view_padding_middle</item>
        <item name="android:paddingBottom">@dimen/view_padding_middle</item>
    </style>

    <style name="View_UnifyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Line_UnifyStyle">
        <item name="android:background">@color/default_line_color</item>
    </style>

    <style name="Horizontal_Line_UnifyStyle" parent="Line_UnifyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_stroke</item>
    </style>

    <style name="Horizontal_margin_Line_UnifyStyle" parent="Horizontal_Line_UnifyStyle">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>

    <style name="Vertical_Line_UnifyStyle" parent="Line_UnifyStyle">
        <item name="android:layout_width">@dimen/line_stroke</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RecyclerView_UnifyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
    </style>


    <style name="TextView_UnifyStyle" parent="View_UnifyStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
        <item name="android:textColor">@color/default_fontcolor</item>
        <item name="android:textColorHint">@color/app_hint</item>
    </style>

    <style name="TextView_Prompt_UnifyStyle" parent="TextView_UnifyStyle">
        <item name="android:textColor">@color/prompt_color</item>
    </style>

    <style name="TextView_DeepColor_Prompt_UnifyStyle" parent="TextView_UnifyStyle">
        <item name="android:textColor">@color/prompt_deep_color</item>
    </style>

    <style name="EditView_UnifyStyle" parent="View_UnifyStyle">
        <item name="android:textSize">@dimen/default_fontsize</item>
        <item name="android:textColor">@color/default_fontcolor</item>
        <item name="android:textColorHint">@color/app_hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button_UnifyStyle"  parent="View_UnifyStyle">
        <item name="android:onClick">onClick</item>
        <item name="android:paddingLeft">@dimen/view_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">@dimen/view_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/default_fontsize</item>
    </style>

    <style name="ImageView_UnifyStyle" parent="View_UnifyStyle">
        <item name="android:scaleType">centerInside</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="ImageView_RightArrow_UnifyStyle" parent="ImageView_UnifyStyle">
        <item name="android:src">@drawable/ic_arrow_right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="RelativeLayout_UnifyStyle" parent="View_UnifyStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Box_RelativeLayout_UnifyStyle" parent="RelativeLayout_UnifyStyle">
        <item name="android:paddingLeft">@dimen/view_padding</item>
        <item name="android:paddingRight">@dimen/view_padding</item>
        <item name="android:paddingTop">@dimen/view_padding_middle</item>
        <item name="android:paddingBottom">@dimen/view_padding_middle</item>
    </style>

    <style name="ProgressBar_Cicle_UnifyStle">
        <item name="android:indeterminateDrawable">@drawable/dlg_loading_bg</item>
        <item name="android:minWidth">@dimen/pb_cicle_min_width</item>
        <item name="android:minHeight">@dimen/pb_cicle_min_height</item>
        <item name="android:maxWidth">@dimen/pb_cicle_max_width</item>
        <item name="android:maxHeight">@dimen/pb_cicle_max_height</item>
    </style>

    <style name="Dialog_UnifyStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="Dialog_Animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>
